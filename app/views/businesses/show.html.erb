<%= @business.location %>

<h1><%= @business.name %></h1></br>

<% @business.items.each do |item| %>
  <div class="container col-md-4 item-wrapper">
    <p class= '<%= item.slug %>'>
      <%= link_to item.name, item_path(item.slug) %>, <%= item.price %></h4>
    </p>
    <%= button_to "Add to Cart", cart_items_path({item_id: item.id}) %>
  </div>
<% end %>
