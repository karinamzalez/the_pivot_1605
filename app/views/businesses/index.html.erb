
  <div class="container">
    <h1 class='white col-sm-10 col-sm-offset-1'> WoldWide Farmer's Market </h1>
    <div class="jumbotron col-sm-10 col-sm-offset-1">
      <div class="container">
        <% @businesses.each do |business| %>
        <div class="col-sm-10 list-box-2">
            <h2 class-"white-text"> <%= business.name %> </h2>
            <div class="col-sm-10">
              <div class="col-sm-5 col-md-offset-1 rounded">
                <img src="<%="http://lorempixel.com/400/400/nature/#{rand(9)}" %>" />
              </div>
              <div class="col-sm-5 white-t">
                 <%= business.location %>
                <p class= '<%= business.slug %>'>
                  <%= link_to "Shop Here", business_slug_path(business.slug), class: "btn button-indigo btn-xs" %>
                </p>
              </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
