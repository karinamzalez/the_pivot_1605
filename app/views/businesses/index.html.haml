.row.wrap
  .row
    %h2.text-center.outline_white Worldwide Farmer's Market - All Businesses
  .row
    -@businesses.each_with_index do |business, index|
      .large-4.medium-4.columns
        %h4.text-center.panel.outline_black "#{business.name}"
        %p
          %img(src="http://lorempixel.com/400/400/nature/#{rand(9)}")
        .span
          =link_to "Shop Here", business_slug_path(business.slug), class: "button"
      -if index % 3 == 2
        .row