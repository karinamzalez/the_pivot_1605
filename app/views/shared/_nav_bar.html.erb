<div class="top-bar navbar">
  <div class="wrap">
    <div class="top-bar-left">
      <ul class="menu">
        <li class="menu-text">

          <%= link_to "Farmers Markets", farmers_markets_path %>
        </li>
      </ul>
    </div>
    <div class="top-bar-right">
      <ul class="dropdown menu" data-dropdown-menu>
        <li class="category-dropdown" id='categories'>
          <a>Categories</a>
          <ul class="menu" id='categories'>
            <% if @categories %>
              <% @categories.each do |category| %>
                <li><%= link_to "#{category.name}", "/#{category.to_param}" %></li>
              <% end %>
            <% end %>
          </ul>
        </li>
        <li id="bucket-link">
          <%= link_to "View bucket", bucket_path %>
          <span class="label"><%= @bucket.total_quantity %></span>
        </li>
        <li>
          <% if current_user %>
            <li>
              <a><i class="foundicon-thumbnails"></i><%= current_user.username %></a>
              <ul class="menu">
                <li>
                  <% if current_admin? %>
                    <%= link_to 'Dashboard', admin_dashboard_path %>
                  <% else %>
                    <%= link_to 'Dashboard', dashboard_path %>
                  <% end %>
                </li>
                <li><%= link_to "Logout", logout_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <%= link_to "Login", login_path %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
