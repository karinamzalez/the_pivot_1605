<div class="top-bar navbar">
  <div class="navbar-inner">
    <div class="top-bar-left">
      <% if current_user %>
        <%= link_to 'Dashboard', dashboard_path, class:"link" %>
      <% end %>
      <%= link_to "Cart", cart_path, class:"panel-login"%>
      <%= link_to "Markets", businesses_path, class:"panel-login"%>
      <div class="dropdown">
        <span class="panel-login">Categories</span>
        <div class="dropdown-content">
          <% if @categories %>
            <% @categories.each do |category| %>
              <p>
                <%= link_to category.name, category_path(category), class:"categories-drop" %>
              </p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="top-bar-right">
      <% if current_user %>
        <%= link_to "Logout", logout_path, method: :delete, class:"login" %>
      <% else %>
        <%= link_to "Login", login_path, class:"login" %>
      <% end %>
    </div>
  </div>
</div>
