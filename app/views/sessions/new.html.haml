.container
  .row.vertical-offset-100
    .col-md-4.col-md-offset-4.login
      .panel.panel-default
        .panel-heading
          .row-fluid.user-row
            %img.img-responsive#mushroom{:alt => "Gnome", :src => "images/mushroom.png"}/
        .panel-body
        %fieldset.login-form
          %label.panel-login
            .login_result
            %h5 Login
            = form_for :session, url: login_path do |f|
              = f.text_field :username, :class => "form-control", :placeholder => "Username"
              = f.password_field :password, :class => "form-control", :placeholder => "Password"
              = f.submit "Login", class: 'button success'
              %br/
              %h4= link_to "Login with Twitter", '/auth/twitter'
              %hr
              = link_to "Create New Account", new_user_path, :id => "create_account"
